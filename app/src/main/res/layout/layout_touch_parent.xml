                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车型：摩托车"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="8dp"
                />

            <TextView
